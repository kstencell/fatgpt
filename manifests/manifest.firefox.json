{
  "manifest_version": 2,
  "name": "FatGPT â€” Chat Width Control",
  "version": "0.1.0",
  "description": "Widen or narrow the ChatGPT conversation column with a slider or keyboard shortcuts.",
  "permissions": [
    "storage",
    "tabs",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "FatGPT"
  },

  "background": { "scripts": ["bg.js"] },

  "commands": {
    "fatgpt-wider": {
      "suggested_key": { "default": "Alt+Period", "mac": "Alt+Period" },
      "description": "Widen width"
    },
    "fatgpt-narrower": {
      "suggested_key": { "default": "Alt+Comma", "mac": "Alt+Comma" },
      "description": "Narrow width"
    },
    "fatgpt-native": {
      "suggested_key": { "default": "Alt+0", "mac": "Alt+0" },
      "description": "Reset to native"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "60": "icons/favicon-60x60.png",
    "120": "icons/favicon-120x120.png"
  },

  "browser_specific_settings": {
    "gecko": { "strict_min_version": "91.0" }
  }
}
