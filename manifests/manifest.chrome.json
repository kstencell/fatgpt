{
  "manifest_version": 3,
  "name": "FatGPT â€” Chat Width Control",
  "version": "0.1.0",
  "description": "Widen or narrow the ChatGPT conversation column with a slider or keyboard shortcuts.",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],

  "action": { "default_popup": "popup.html", "default_title": "FatGPT" },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "60": "icons/favicon-60x60.png",
    "120": "icons/favicon-120x120.png"
  }
}
