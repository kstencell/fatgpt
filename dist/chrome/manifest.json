{
  "manifest_version": 3,
  "name": "FatGPT â€” ChatGPT Width Control",
  "short_name": "FatGPT",
  "version": "1.0.0",
  "description": "Widen or narrow the ChatGPT conversation column with a slider or keyboard shortcuts.",
  "author": "Karl Stencell",
  "homepage": "https://github.com/kstencell/fatgpt",
  "repository": {
    "type": "git",
    "url": "https://github.com/kstencell/fatgpt.git"
  },
  "keywords": ["chatgpt", "openai", "ui"],
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],

  "action": { "default_popup": "popup.html", "default_title": "FatGPT" },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/favicon-16x16.jpg",
    "32": "icons/favicon-32x32.jpg",
    "48": "icons/favicon-48x48.jpg",
    "60": "icons/favicon-60x60.jpg",
    "96": "icons/favicon-96x96.jpg",
    "128": "icons/favicon-128x128.jpg",
    "256": "icons/favicon-256x256.jpg",
    "310": "icons/favicon-310x310.jpg"
  }
}
